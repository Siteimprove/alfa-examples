{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>siteimprove/alfa//config/alfa-renovate"
  ],
  "packageRules": [
    {
      "description": "We currently ignore all other deps due to long time without update.",
      "groupName": "Ignored deps",
      "enabled": false,
      "matchPackageNames": [
        "*",
        "!@siteimprove/alfa{/,}**",
        "!@types/chai{/,}**",
        "!@types/mocha{/,}**",
        "!@types/node{/,}**",
        "!chai{/,}**",
        "!cypress{/,}**",
        "!eslint{/,}**",
        "!knip{/,}**",
        "!mocha{/,}**",
        "!playwright{/,}**",
        "!prettier{/,}**",
        "!puppeteer{/,}**",
        "!typescript{/,}**",
        "!vite{/,}**"
      ]
    }
  ]
}
